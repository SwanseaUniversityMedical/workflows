{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",

  "extends": [":enableRenovate"],

  "schedule": ["* * * * *"],

  "packageRules": [
    {
      "matchDepTypes": ["action"],
      "pinDigests": true
    }
  ],

  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^\\.github/workflows/.*\\.ya?ml$"],
      "matchStrings": [
        "uses:\\s*SwanseaUniversityMedical/workflows/(?<path>[^@]+)@(?<currentValue>v?\\d+\\.\\d+\\.\\d+-[^\\s]+)"
      ],
      "packageNameTemplate": "SwanseaUniversityMedical/workflows",
      "depNameTemplate": "{{{path}}}",
      "datasourceTemplate": "github-tags",
      "versioning": "semver",
      "versionCompatibility": "^(?<version>v?\\d+\\.\\d+\\.\\d+)-(?<compatibility>.*)?$",
      "autoReplaceStringTemplate": "uses: SwanseaUniversityMedical/workflows/{{{path}}}@{{{newValue}}}  # {{{currentValue}}}"
    }
  ]
}
