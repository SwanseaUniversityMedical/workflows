{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":enableRenovate"
  ],
  "schedule": [
    "* * * * *"
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "SwanseaUniversityMedical/workflows"
      ],
      "enabled": true,
      "pinDigests": false,
      "additionalBranchPrefix": "{{{currentDigestShort}}}-",
      "commitMessageAction": "{{{currentDigestShort}}} - update"
    }
  ]
}
