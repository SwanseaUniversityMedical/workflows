{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":enableRenovate"
  ],
  "schedule": [
    "* * * * *"
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^\\.github/workflows/.*\\.yaml$"
      ],
      "matchStrings": [
        "uses:\\s*SwanseaUniversityMedical/workflows/.github/actions/(?<path>[^@]+)@(?<currentValue>\\S+)"
      ],
      "packageNameTemplate": "SwanseaUniversityMedical/workflows",
      "depNameTemplate": "{{{path}}}",
      "datasourceTemplate": "github-tags",
      "versioningTemplate": "regex:^v(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)-(?<compatibility>.+)$",
      "autoReplaceStringTemplate": "uses: SwanseaUniversityMedical/workflows/.github/actions/{{{path}}}@{{{newDigest}}}  # {{{currentValue}}}"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": [
        "SwanseaUniversityMedical/workflows"
      ],
      "enabled": false,
      "pinDigests": false
    },
    {
      "matchManagers": [
        "custom.regex"
      ],
      "matchPackageNames": [
        "SwanseaUniversityMedical/workflows"
      ],
      "enabled": false,
      "pinDigests": false,
      "additionalBranchPrefix": "{{{depName}}}-",
      "commitMessageAction": "{{{depName}}} - update",
      "labels": [
        "{{{depName}}}"
      ]
    }
  ]
}
